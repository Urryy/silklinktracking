@model cargosiklink.Models.ViewModel.Account.UserInfoViewModel;

<div class="cargo-main-container">
    <h1 class="display-6 text-center cargo-main-title">Персональные данные пользователя</h1><br />
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4 d-block mx-auto">
        <div class="mb-3">
            <label for="input-cargo-login" class="form-label">Логин</label>
            <input type="text" class="form-control input-cargo" id="input-cargo-login" value="@Model.Name" readonly>
        </div>
        <div class="mb-3">
            <label for="input-cargo-email" class="form-label">Email</label>
            <input type="text" class="form-control input-cargo" id="input-cargo-email" value="@Model.Email" readonly>
        </div>
        <div class="mb-3">
            <label for="input-cargo-phone" class="form-label">Телефон</label>
            <input type="text" class="form-control input-cargo" id="input-cargo-phone" value="@Model.Phone" readonly>
        </div>
        <div class="mb-3">
            <label for="input-cargo-codeclient" class="form-label">Код клиента</label>
            <input type="text" class="form-control input-cargo" id="input-cargo-codeclient" value="@Model.UserCode" readonly>
        </div>
        <div class="mb-3">
            <label for="input-cargo-town" class="form-label">Город</label>
            <input type="text" class="form-control input-cargo" id="input-cargo-town" value="@Model.City" readonly>
        </div>
    </div>
</div>
