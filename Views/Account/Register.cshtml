@model cargosiklink.Models.ViewModel.Account.RegisterViewModel;

<div class="cargo-main-container">
    <h1 class="display-6 text-center cargo-main-title">Создание пользователя</h1><br />
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4 d-block mx-auto">
        <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="All" style="font-size:22px;"></div>
            <div class="mb-3">
                <input asp-for="Name" placeholder="Введите логин" class="form-control textbox-dg font-weight-bold input-cargo" type="text" />
            </div>
            <div class="mb-3">
                <input asp-for="Password" placeholder="Введите пароль" class="form-control textbox-dg font-weight-bold input-cargo" type="password" />
                <input asp-for="PasswordConfirm" placeholder="Подтвердите пароль" class="form-control textbox-dg font-weight-bold input-cargo" type="password" />
            </div>
            <div class="mb-3">
                <input asp-for="Email" placeholder="Введите Email" class="form-control textbox-dg font-weight-bold input-cargo" type="email" />
            </div>
            <div class="mb-3">
                <input asp-for="PhoneNumber" placeholder="Введите номер телефона" class="form-control textbox-dg font-weight-bold input-cargo" type="number" />
            </div>
            <div class="mb-3">
                <input asp-for="UserCode" placeholder="Введите user code" class="form-control textbox-dg font-weight-bold input-cargo" type="text" />
            </div>
            <div class="mb-3">
                <input asp-for="City" placeholder="Введите город" class="form-control textbox-dg font-weight-bold input-cargo" type="text" />
            </div>
            <div class="d-grid gap-2 d-md-block float-right">
                <button type="submit" class="btn btn-cargo">Создать пользователя</button>
            </div>
        </form>
    </div>
</div>