@model IEnumerable<cargosiklink.Models.ViewModel.User.UserViewModel>;
@{
    int count = 1;
}
<table class="table table-striped table-success">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Логин</th>
      <th scope="col">Email</th>
      <th scope="col">Телефон</th>
      <th scope="col">User-Code</th>
      <th scope="col">Город</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
        @foreach(var userModel in Model)
        {
            <tr>
                <th scope="row">@(count++)</th>
                <td>@userModel.Name</td>
                <td>@userModel.Email</td>
                <td>@userModel.Phone</td>
                <td>@userModel.UserCode</td>
                <td>@userModel.City</td>
                <td><a class="btn btn-danger cargo-font" onclick="openDeleteModal({ object: users, data: '@userModel.Id' })">Удалить</a></td>
            </tr>
        } 
  </tbody>
</table>
